<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bes"
    tools:context=".ui.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_weight="6"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/circle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="40dp"
                    android:src="@drawable/plus" />
                <TextView
                    android:id="@+id/circle_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Deneme"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:drawableTop="@drawable/cloud_24"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="40dp"
                    android:visibility="visible"
                    android:src="@drawable/plus" />
                <TextView
                    android:id="@+id/circle1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:text="Deneme"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:drawableTop="@drawable/cloud_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="40dp"
                    android:visibility="visible"
                    android:src="@drawable/plus" />
                <TextView
                    android:id="@+id/circle2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Deneme"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:drawableTop="@drawable/cloud_24"
                    android:visibility="gone"/>

            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/weather"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="0.60"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:layout_gravity="center"
                    android:textSize="40dp"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_weather"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/weather" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.54"
                android:id="@+id/clock"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="World Clock"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_clock_main"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/clock" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/time"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Difference"
                    android:textSize="40dp"
                    android:gravity="start"
                    android:layout_gravity="center"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_time"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/time"
                    app:lottie_loop="true" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>